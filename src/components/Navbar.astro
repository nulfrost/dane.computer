---
const paths = [
  { name: "home", path: "/" },
  { name: "blogs", path: "/blogs" },
];
---

<header class="max-w-5xl mx-auto pt-2 md:pt-10 mb-2 px-3 md:px-0">
  <nav>
    <ul class="flex gap-2">
      {
        paths.map(({ name, path }) => (
          <li>
            <a
              href={path}
              class="font-bold text-blue-600 hover:(text-blue-500 underline)"
            >
              {name}
            </a>{" "}
          </li>
        ))
      }
    </ul>
  </nav>
</header>
